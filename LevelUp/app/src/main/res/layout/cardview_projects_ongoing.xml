<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:backgroundTint="#00000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ongoingdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/purple_200"
        android:elevation="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#00000000">

            <TextView
                android:id="@+id/seedetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="See Details"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/cvProject_onGoing_imageView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cvProject_onGoing_titleProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Progress : "
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/cvProject_onGoing_imageView"
                app:layout_constraintTop_toBottomOf="@+id/cvProject_onGoing_imageView" />

            <TextView
                android:id="@+id/cvProject_onGoing_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:text="{progress %}"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                app:layout_constraintBottom_toBottomOf="@+id/cvProject_onGoing_titleProgress"
                app:layout_constraintStart_toEndOf="@+id/cvProject_onGoing_titleProgress"
                app:layout_constraintTop_toTopOf="@+id/cvProject_onGoing_titleProgress" />

            <TextView
                android:id="@+id/cvProject_onGoing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:text="{title}"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cvProject_onGoing_imageView"
                app:layout_constraintTop_toTopOf="@+id/cvProject_onGoing_imageView" />

            <TextView
                android:id="@+id/cvProject_onGoing_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="{creator}"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/cvProject_onGoing_imageView"
                app:layout_constraintStart_toStartOf="@id/cvProject_onGoing_title"
                app:layout_constraintTop_toBottomOf="@id/cvProject_onGoing_title" />

            <TextView
                android:id="@+id/cvProject_onGoing_titleCollaborators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Collaborators"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/cvProject_onGoing_overview"
                app:layout_constraintTop_toBottomOf="@+id/cvProject_onGoing_overview" />

            <TextView
                android:id="@+id/cvProject_onGoing_titleOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="About Project"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/cvProject_onGoing_titleProgress"
                app:layout_constraintTop_toBottomOf="@+id/cvProject_onGoing_titleProgress" />

            <TextView
                android:id="@+id/cvProject_onGoing_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="{overview}"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/cvProject_onGoing_titleOverview"
                app:layout_constraintTop_toBottomOf="@+id/cvProject_onGoing_titleOverview" />

            <TextView
                android:id="@+id/cvProject_onGoing_collaborators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="{collaborators}"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cvProject_onGoing_titleCollaborators"
                app:layout_constraintTop_toBottomOf="@+id/cvProject_onGoing_titleCollaborators" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>